<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChiTietActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarchitiet"
        app:title="Chi Tiết Sản Phẩm"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:background="@color/toolbar_color"
        >
        <FrameLayout
            android:id="@+id/framegiohang"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:layout_width="56dp"
            android:layout_height="?attr/actionBarSize">
            <com.nex3z.notificationbadge.NotificationBadge
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/menu_sl"
                android:layout_gravity="top|right"/>
            <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_cart_24"/>
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarchitiet"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageChitiet"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:padding="5dp"
            android:src="@drawable/icon_new_w128"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/txttensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_main"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txtgiasp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/g_a_100_000vnd"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"/>
            <Button
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/btnthemvaogiohang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/th_m_v_o_gi_h_ng"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:background="@drawable/button_bg"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="@string/m_t_chi_ti_t_s_n_ph_m"
            android:textSize="18sp"
            android:textColor="@color/text_color_main"
            android:textStyle="bold"
            android:gravity="center"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingTop="15dp"
            android:id="@+id/txtmotachitiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:lineHeight="40sp"
            android:textColor="@color/text_color_main"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>